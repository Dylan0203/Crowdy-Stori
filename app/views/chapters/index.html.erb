<style type="text/css">
  
table {
    border-collapse: collapse;
}

table, th, td {
    border: 1px solid black;
}

</style>

<h1>Chapters Index</h1>

<h3><%= link_to "我要開啟一段新的故事", new_chapter_path %></h3>

<table class="table">

  <h2>所有故事結構表</h2>
  <thead>
    <tr>
      <th>PART1</th>
      <th>PART2</th>
      <th>PART3</th>
    </tr>
  </thead>
  <tbody>
    <% @chapters.at_depth(0).each do |d| %> 
      <tr class= "<%= d.topic %>" >
        <td class="part1">    
          <p><%= link_to d.topic, chapter_path(d) %></p>
        </td>
        <% if d.children.present? %>
          <% d.children.each do |ch| %>
            <td class="part2">
              <p><%= link_to ch.topic, chapter_path(ch) %></p>
            </td>
            <% if ch.children.present? %>
              <td class="part3">
                <% ch.children.each do |gc| %>
                  <p><%= link_to gc.topic, chapter_path(gc) %></p>
                <% end %>
              </td>
            <% else %>
              <td class="part3"></td>
            <% end %>
          <% end %>
        <% else %>
          <td class="part2"></td>
          <td class="part2"></td>
        <% end %>    
      </tr>  
    <% end %>
  </tbody>
</table>

<hr>


<table class="table">
<h2>所有已完成故事</h2>
<tr>
  <th>標題</th>
  <th>作者</th>
  <th>場景</th>
  <th>故事</th>
  <th>點閱</th>
  <th>層級</th>
  <th>完成</th>
</tr>
  <% @finish.each do |f| %>
    <tr> 
      <td><%= link_to f.topic, chapter_path(f)%></td>
      <td><%= f.user.try(:display_name) %></td>
      <td><%= f.setting %></td>
      <td><%= f.content %></td>
      <td><%= f.view %></td>
      <td><%= f.ancestry_depth+1 %></td>
      <td><%= f.finish %></td>
    </tr>
  <% end %>
</table>

<hr>

<table class="table">
<h2>所有的故事片段</h2>
<tr>
  <th>標題</th>
  <th>作者</th>
  <th>場景</th>
  <th>故事</th>
  <th>點閱</th>
  <th>層級</th>
  <th>完成</th>
</tr>
  <% @chapters.each do |c| %>
    <tr>
      <td><%= link_to c.topic, chapter_path(c)%></td>
      <td><%= c.user.try(:display_name) %></td>
      <td><%= c.setting %></td>
      <td><%= c.content %></td>
      <td><%= c.view %></td>
      <td><%= c.ancestry_depth+1 %></td>
      <td><%= c.finish %></td>
    </tr>
  <% end %>
</table>

